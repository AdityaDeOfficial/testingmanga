<p id="notice"><%= notice %></p>

<div class="manga-details">
  <% if @manga.cover_image.attached? %>
    <div class="cover-image">
      <%= cl_image_tag @manga.cover_image.key, alt: "Cover Image", class: "your-custom-css-class" %>
    </div>
  <% else %>
    <div class="cover-image no-cover-image">
      <p>No cover image available</p>
    </div>
  <% end %>

  <div class="details">
    <p>
      <strong>Manga Title:</strong>
      <%= @manga.manga_title %>
    </p>

    <p>
      <strong>Author:</strong>
      <%= @manga.author %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @manga.description %>
    </p>

    <div class="buttons">
      <%= link_to 'Edit', edit_manga_path(@manga), class: "button button-edit" %>
      <%= link_to 'Back', mangas_path, class: "button button-back" %>
    </div>
  </div>
</div>
